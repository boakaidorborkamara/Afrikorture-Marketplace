<!-- include head section from partial -->
<%- include("../template/head.ejs") %>
<body>
   
    <!-- include nav section from partial -->
    <%- include("../template/nav.ejs") %>
    
    <!-- showcase section  -->
    <section class="jumbotron d-flex flex-column align-items-center justify-content-center mb-5" id="create-shop-showcase-section" style="background-image: url('/img/create-shop-showcase-image.jpg'); background-repeat: no-repeat; background-size: cover;">
        <div class="container text-center text-light">
        <h1 class="display-4 fw-bolder">Create another source of income by doing what you love.</h1>
        <p class=" p-2 d-inline-block">Create a shop on Afrikorture Marketplace and start selling with ease. </p>
        
        <a class="d-block" href="#registration-form">
            <button type="button" class="btn" style="background-color: orange;">CREATE A STORE</button>
        </a>
        </div>
    </section>

     <!-- benefits  -->
    <section class="container-fluid d-flex justify-content-center align-items-center p-5">
        <div class="row p-3">
        <div class="col-lg-3 container d-flex flex-column justify-content-center align-items-center py-3 px-5 text-center">
            <i class="fas fa-store fa-5x"></i>
            <p class="py-3 fw-bold">Create your shop for free.</p>
            <p>Easily add as many products as you want.</p>
        </div>
        <div class="col-lg-3 container d-flex flex-column justify-content-center align-items-center py-3 px-5 text-center">
            <i class="fas fa-bullhorn fa-5x"></i>
            <p class="py-3 fw-bolder">Marketing Support.</p>
            <p>Promotions messages are send via SMS, Email, or Messenger.</p>
        </div>
        <div class="col-lg-3 container d-flex flex-column justify-content-center align-items-center py-3 px-5 text-center">
            <i class="fas fa-money-bill fa-5x"></i>
            <p class="py-3 fw-bold">Automated Local Payment</p>
            <p>You are alerted by email or Text and have 48 hours to confirm the order.</p>
        </div>
        <div class="col-lg-3 container d-flex flex-column justify-content-center align-items-center py-3 px-5 text-center ">
            <i class="fa fa-phone fa-5x"></i>
            <p class="py-3 fw-bold">Customer service.</p>
            <p>We respond to issues that buyers may have.</p>
        </div>
        </div>
    </section>


    <!-- registration form section  -->
    <section class="p-5" id="form-container">

        <h3 class="text-center fw-bolder" id="registration-form">Creat Your Shop</h3>

        <form action="/create-shop" method="post">
            <div class="form-group mt-4">
                <label for="shop-name">Shop Name</label>
                <input type="text" required class="form-control" id="shop-name" name="shop-name" value="SK Fashion">
            </div>
            
            <div class="form-group mt-4">
                <label for="county">County<span>*</span></label>
                <select class="form-control" name="county" id="county" style="width: 100%;">
                <option value="select-count" disabled selected>Select County</option>
                <option value="Bomi">Bomi</option>
                <option value="Bong">Bong</option>
                <option value="Gbarpolu">Gbarpolu</option>
                <option value="Grand Bassa">Grand Bassa</option>
                <option value=" Grand Cape Mount"> Grand Cape Mount</option>
                <option value="Grand Gedeh">Grand Gedeh</option>
                <option value="Grand Kru">Grand Kru</option>
                <option value="Lofa">Lofa</option>
                <option value="Margibi">Margibi</option>
                <option value="Maryland">Maryland</option>
                <option value="Montserrado">Montserrado</option>
                <option value="Nimba">Nimba</option>
                <option value="Rivercess">Rivercess</option>
                <option value="River Gee">River Gee</option>
                <option value=" Sinoe"> Sinoe</option>
                </select>
            </div>
            <div class="form-group mt-4">
                <label for="address">Address<span>*</span></label>
                <input type="text" required class="form-control" id="address" name="user-address" value="12th Street Sinkor">
            </div>
            <div class="form-group mt-4">
                <label for="email">Email <span>*</span></label>
                <input type="email" required class="form-control" id="email" name="user-email" value="johnflomo@gmail.com">
            </div>
            <div class="form-group mt-4">
                <label for="phone-number">Shop Phone<span>*</span></label>
                <input type="text" required  class="form-control" id="phone-number" name="phone-number" value="0770112233">
            </div>
            <div class="form-group mt-4">
                <label for="email">Logo <span>*</span></label>
                <input type="file" required class="form-control" id="logo" name="logo">
            </div>

            
            
            
            <div class="form-group mt-4">
                <label for="social-media-link">Facebook Page</label>
                <input type="text" required class="form-control" id="facebook-link" name="facebook-link" placeholder="Copy and paste your business Facebook page link.">
            </div>
            <div class="form-group mt-4">
                <label for="instagram-link">Instagram Page</label>
                <input type="text" required class="form-control" id="instagram-link" name="instagram-link" placeholder="Copy and paste your business Instagram page link.">
            </div>

            <div class="form-group mt-4">
                <label for="instagram-link">Shop Description</label>
                <br>
                <textarea name="shop-description" id="shop-description" cols="30" rows="10" placeholder="In few word, tell customers what your business is about and what it offers." style="width: 100%;"></textarea>
            </div>
            
            <div class="d-flex justify-content-center align-items-center">

                <input type="submit" value="CREATE SHOP">
               
            </div>
        </form>
    </section>


    <!-- result after registering  -->
    <div id="registration-result-area" style="background-color: green; color: white; text-align: center; display: none;">
        <p style="padding: 6px;" id="result-text">Shop sucessfully created!</p>
    </div>



    


    
    <!-- include footer section from partial -->
    <%- include("../template/footer.ejs") %>

   

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>

    <!-- custom js  -->
    <script src="js/script.js"></script>
    <script src="js/register-store.js"></script>
</body>

<style>
    #form-container{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    #form-container form{
        width: 60%;
        border: 1px solid black;
        background-color: orange;
        padding: 20px;
        font-size: 1.5em;
    }

</style>
</html>